{
  "shape": "䷚",
  "code": "100001",
  "pin_yin": "yí",
  "name": "颐",
  "gua_ci": ["贞吉。观颐，自求口实。"],
  "yao_ci": [{
    "kind": "初九",
    "desc": "舍尔灵龟，观我朵颐，凶。"
  },{
    "kind": "六二",
    "desc": "颠颐，拂经，于丘颐，征凶。"
  },{
    "kind": "六三",
    "desc": "拂颐，贞凶，十年勿用，无攸利。"
  },{
    "kind": "六四",
    "desc": "颠颐吉，虎视眈眈，其欲逐逐，无咎。"
  },{
    "kind": "六五",
    "desc": "拂经，居贞吉，不可涉大川。"
  },{
    "kind": "上九",
    "desc": "由颐，厉吉，利涉大川。"
  }],
  "da_xiang": "山下有雷，颐；君子以慎言语，节饮食。",
  "xiao_xiang": [{
    "kind": "初九",
    "desc": "观我朵颐，亦不足贵也。"
  },{
    "kind": "六二",
    "desc": "征凶，行失类也。"
  },{
    "kind": "六三",
    "desc": "十年勿用，道大悖也。"
  },{
    "kind": "六四",
    "desc": "颠颐之吉，上施光也。"
  },{
    "kind": "六五",
    "desc": "居贞之吉，顺以从上也。"
  },{
    "kind": "上九",
    "desc": "由颐厉吉，大有庆也。"
  }],
  "tuan_ci": [
    "颐贞吉，养正则吉也。观颐，观其所养也；自求口实，观其自养也。天地养万物，圣人养贤，以及万民；颐之时义大矣哉！"
  ]
}
