{
  "shape": "䷨",
  "code": "100011",
  "pin_yin": "sǔn",
  "name": "损",
  "gua_ci": ["有孚，元吉。无咎，可贞，利有攸往。曷之用？二簋可用享。"],
  "yao_ci": [{
    "kind": "初九",
    "desc": "已事遄往，无咎，酌损之。"
  },{
    "kind": "九二",
    "desc": "利贞，征凶，弗损益之。"
  },{
    "kind": "六三",
    "desc": "三人行，则损一人；一人行，则得其友。"
  },{
    "kind": "六四",
    "desc": "损其疾，使遄有喜，无咎。"
  },{
    "kind": "六五",
    "desc": "或益之，十朋之龟弗克违，元吉。"
  },{
    "kind": "上九",
    "desc": "弗损益之，无咎，贞吉，利有攸往，得臣无家。"
  }],
  "da_xiang": "山下有泽，损；君子以惩忿窒欲。",
  "xiao_xiang": [{
    "kind": "初九",
    "desc": "已事遄往，尚合志也。"
  },{
    "kind": "九二",
    "desc": "利贞，中以为志也。"
  },{
    "kind": "六三",
    "desc": "一人行，三则疑也。"
  },{
    "kind": "六四",
    "desc": "损其疾，亦可喜也。"
  },{
    "kind": "六五",
    "desc": "元吉，自上佑也。"
  },{
    "kind": "上九",
    "desc": "弗损益之，大得志也。"
  }],
  "tuan_ci": [
    "损，损下益上，其道上行。损而有孚，元吉，无咎，可贞，利有攸往。曷之用？二簋可用享；二簋应有时。损刚益柔有时，损益盈虚，与时偕行。"
  ]
}
