{
  "shape": "䷕",
  "code": "100101",
  "pin_yin": "bì",
  "name": "贲",
  "gua_ci": ["亨，小利有攸往。"],
  "yao_ci": [{
    "kind": "初九",
    "desc": "贲其趾，舍车而徒。"
  },{
    "kind": "六二",
    "desc": "贲其须。"
  },{
    "kind": "九三",
    "desc": "贲如濡如，永贞吉。"
  },{
    "kind": "六四",
    "desc": "贲如皤如，白马翰如，匪寇婚媾。"
  },{
    "kind": "六五",
    "desc": "贲于丘园，束帛戋戋，吝，终吉。"
  },{
    "kind": "上九",
    "desc": "白贲，无咎。"
  }],
  "da_xiang": "山下有火，贲；君子以明庶政，无敢折狱。",
  "xiao_xiang": [{
    "kind": "初九",
    "desc": "舍车而徒，义弗乘也。"
  },{
    "kind": "六二",
    "desc": "贲其须，与上兴也。"
  },{
    "kind": "九三",
    "desc": "永贞之吉，终莫之陵也。"
  },{
    "kind": "六四",
    "desc": "当位疑也。匪寇婚媾，终无尤也。"
  },{
    "kind": "六五",
    "desc": "六五之吉，有喜也。"
  },{
    "kind": "上九",
    "desc": "白贲无咎，上得志也。"
  }],
  "tuan_ci": [
    "贲，亨；柔来而文刚，故亨。分刚上而文柔，故小利有攸往。刚柔交错，天文也；文明以止，人文也。观乎天文，以察时变；观乎人文，以化成天下。"
  ]
}
